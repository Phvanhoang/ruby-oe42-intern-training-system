<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <p id="logo"><%= t ".name_app" %></p>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <% if logged_in? %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= t "users.show.profile" %> <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li class="divider"></li>
              <li>
                <%= link_to t("session.destroy.title"), logout_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t("session.title"), login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
